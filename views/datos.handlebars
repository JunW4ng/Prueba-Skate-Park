<h1>Skate Park</h1>

<div class="py-4">
  <h2>Datos del perfil</h2>
  <hr class="w-50" />

  <form method="post">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input
          name="email"
          class="form-control m-auto"
          disabled
          value="{{email}}"
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input name="nombre" class="form-control m-auto" value="{{nombre}}" />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input
          type="password"
          name="password"
          class="form-control m-auto"
          value="{{password}}"
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input
          type="password"
          class="form-control m-auto"
          value="{{password}}"
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>AÃ±os de experiencia</label>
        <input
          name="experiencia"
          class="form-control m-auto"
          value="{{experiencia}}"
        />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input
          name="especialidad"
          class="form-control m-auto"
          value="{{especialidad}}"
        />
      </div>
    </div>
    <div class="mb-1">
      <button
        class="btn btn-primary"
        onclick="javascript: form.action='/updateUser'"
      >Actualizar</button>
    </div>
  </form>
  <div>
    <a href="http://localhost:3000/deleteUser" class="btn btn-danger">Eliminar cuenta</a>
  </div>
</div>