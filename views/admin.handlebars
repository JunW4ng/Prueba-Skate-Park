<h1>Skate Park</h1>

<div class="py-4">
  <h2>Administración</h2>
  <hr class="w-50" />

  <table class="table w-50 m-auto">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Foto</th>
        <th scope="col">Nombre</th>
        <th scope="col">Años de experiencia</th>
        <th scope="col">Especialidad</th>
        <th scope="col">Estado</th>
      </tr>
    </thead>
    <tbody>
      {{#each participantes}}
        <tr>
          <th scope="row">{{this.id}}</th>
          <td><div>{{this.foto}}</div></td>
          <td>{{this.nombre}}</td>
          <td>{{this.anos_experiencia}}</td>
          <td>{{this.especialidad}}</td>
          <td>
            <input
              type="checkbox"
              onchange="cambioEstado({{this.id}},{{this.estado}})"
            />
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <script>
    const cambioEstado = (id, estado) =>
    fetch(`/estado/${id}/{${estado}`,{method: "put"})
  </script>
</div>